<%- include('./includes/head.ejs') %>
<title>Home</title>
</head>

<body>
  <%- include('./includes/primary-nav.ejs') %>

  <body>
    <div class="container mt-2">
      <h1>Create Post</h1>
      <form action="/redirect" method="POST">
        <textarea name='body' rows="3" cols="30"></textarea><br>
        <input type="submit" value="Post">
      </form>
    </div>
  </body>

  <body>
    <ul class="posts container">
      <div class="mt-2">Hello <%= username %></div>
      <% for(var i=0; i < posts.length; i++) { %>
      <li class="posts card mt-2">
        <div class="card__info">
          <span>username: <%= posts[i].author.name %> </span> <span> <%= posts[i].createdAt %> :</span><br>
          <span><%= posts[i].body %></span><br>
        </div>
      </li>
      <% } %>
    </ul>
  </body>
